@model homework_56.Models.Task


@{ ViewBag.Title = "Добавить  Задачу";

    Layout = "_Layout"; }


<h2>Заполните поля</h2>

<div class="row">
    <div class="category_add_form col-md-6">
        <form asp-action="Create" asp-controller="Tasks" method="post">
            <div class="form_row">
                <label for="">
                    Название
                    <input asp-for="Name" type="text">
                    @*<span asp-validation-for="Name" />*@
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Имя исполнителя
                    <input asp-for="CreatorName" type="text">
                    @*<span asp-validation-for="Name" />*@
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Приоритет задачи
                    @Html.DropDownList("Priority", new SelectList(new string[] {"Высокий", "Средний", "Низкий" }))
                    @*<span asp-validation-for="Name" />*@
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Описание задачи
                    <input asp-for="Description" type="text">
                    @*<span asp-validation-for="Name" />*@
                </label>
            </div>
            <button type="submit">Создать</button>
        </form>
        @*@section Scripts
            {
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
            }*@
    </div>
</div>
