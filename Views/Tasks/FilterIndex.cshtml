@using System.Threading.Tasks;
@using homework_56.Models;
@model homework_56.ViewModel.TasksListViewModel



@{

    ViewBag.Title = "Каталог пользователей";

}



<h2>Каталог пользователей</h2>



<form method="get">

    <div class="form-inline form-group">

        <label class="control-label">Имя: </label>

        @Html.TextBox("name", Model.Name, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Описание: </label>

        @Html.TextBox("name", Model.Description, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Дата создания от: </label>

        @Html.TextBox("name", Model.FromDate, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Дата создания до: </label>

        @Html.TextBox("name", Model.ToDate, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Приоритет: </label>

        @Html.DropDownList("priority", Model.Priority as SelectList,

                htmlAttributes: new { @class = "form-control" })
        <label class="control-label">Статус: </label>

        @Html.DropDownList("status", Model.Status as SelectList,

                htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />

    </div>

</form>



<table class="table table-striped">

    <tr>

        <th>Заголовок </th>
        <th>Описание</th>
        <th>Дата создания от</th>
        <th>Дата создания до</th>
        <th>Приоритет</th>
        <th>Состояние </th>

    </tr>



    @foreach (var item in Model.Tasks)

    {

        <tr>

            <td>

                @Html.DisplayFor(modelItem => item)

            </td>

            <td>

                @Html.DisplayFor(modelItem => item)

            </td>

            <td>

                @Html.DisplayFor(modelItem => item)

            </td>

        </tr>

    }

</table>